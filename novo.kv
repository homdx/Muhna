<Pronto>:
	BoxLayout:
		id:principal
		orientation:'vertical'
		BoxLayout:
			id:primaria
			orientation:'horizontal'
			
			pos_hint:{'x':1}#max em cima em x
			pos_hint:{'y':1}#max em cima em y
			size_hint:[1,.08]#max em x e 8% em y
			
			canvas:
				Color:
					rgba:1,1,1,1
				Rectangle:
					pos:self.pos
					size:self.size
			
			ActionBar:
				pos_hint: {'top':1}  #na parte superior da tela'
				background_color: 0, 0, 0, 1
				size:self.size
				ActionView:             
					ActionPrevious:
						app_icon: ''            
						title:'Voltar'
						on_release:root.previous_screen()
					ActionButton:
						id:action_iniciar
						text:'Recomeçar'    
						on_release:root.previous_screen_limpa()
						canvas.before:
							Color:
								rgba:0.33,0.17,0.01,1
							Rectangle:
								pos:self.pos
								size:self.size
		GridLayout:
			id:gridlayout
			padding:10
			spacing:10
			cols:4
						


