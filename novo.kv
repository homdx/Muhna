<Inserenome>:
	BoxLayout:
		canvas.before:
			Color:
				rgba: 1,1,1,.8#0.30,0.14,0,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
				radius: [50,]
		TextInput:
			id:texinp
			size_hint:[.8,.8]
			hint_text: 'Escreva seu nome'
			font_size: '14dp'
			background_color: 1,1,0,0
			input_filter:lambda text, from_undo: text[:20 - len(self.text)]
	BoxLayout:

		size_hint:[.2,1]
