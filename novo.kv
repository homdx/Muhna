<Teste>:
	BoxLayout:
		orientation:'vertical'
		canvas.before:
			Color:
				rgba:1, 1, 1,1
			Rectangle:
				pos: self.pos
				size: self.size
		ActionBar:
			pos_hint: {'top':1}  #na parte superior da tela'
