<Gerenciador>:
	Menu:#primeira a ser exibida
		name:'menu'
	Jogo:
		id:gerenciador
		name:'jogo'
	Teste:
		name:'teste'
	Ranking:
		name:'ranking'

<Menu>:
	BoxLayout:
		orientation:'vertical'
		padding:root.width*0.10,root.height*0.1 #preencher
		spacing:'10dp' #espacamento
		canvas:
			Color:
				rgba: 1,1,1,1 #rgb max 1
			Rectangle:
				size:self.size
				pos:self.pos
		Image:
			source:'imagens/logo.png'
			size_hint: 1,1
			allow_stretch:True
		Botao:
			id:button1
			text:'Jogo da memória'
			on_release:app.root.current='jogo'
		# Botao:
		# 	id:button2
		# 	text:'Quiz'
		# 	on_release:app.root.current='quiz'
		Botao:
			id:button3
			text:'Quiz'
			on_release:
				app.root.current='teste'
				
		Botao:
			id:button4
			text:'Placar'
			on_release:app.root.current='ranking'

<Botao@ButtonBehavior+LabelBotao>:
	pos_hint: {'center_x':.5,'center_y':.5}
	canvas.before:

		Color:
			rgba: 0.30,0.14,0,1 #marrom 77/255,38/255,0,1 #azul 0.1,0.5,0.7,1
		Ellipse:
			pos:self.pos
			size:self.height,self.height
		Ellipse:
			pos:self.x+self.width-self.height,self.y
			size:self.height,self.height
		Rectangle:
			pos:self.x+self.height/2.0,self.y
			size:self.width-self.height,self.height

<Jogo>:
	BoxLayout:
		id:box

		orientation:'vertical'
		
		canvas.before:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				size:self.size
				pos:self.pos
		ActionBar:
			pos_hint: {'top':1}  #na parte superior da tela'
			background_color: 0, 0, 0, 1

			ActionView:             
				ActionPrevious:
					app_icon: ''            
					title:'Voltar'
					on_release:root.previous_screen_limpa()
				
		BoxLayout:
			id:tbox
			pos_hint:{'top':1}
			orientation:'vertical'
			#padding:root.width*0.10,root.height*0.1 #preencher
			#spacing:'10dp' #espacamento
			LabelBotao:

				#pos_hint:{'center_x':.5,'center_y':.5}
				pos_hint:{'top':1}
				text:"Selecione a quantidade de imagens para o novo jogo"
				height:'100dp'
				color:0,0,0,1
				#size_hint_y:None
				#height:self.height
				canvas.before:
					Color:
						rgba:0.33,0.17,0.01,0
					Rectangle:
						pos:self.pos
						size:self.size

			GridLayout:
				id:botaoiniciar
				orientation:'vertical'
				#pos_hint: {'top':.7}
				pos_hint:{'top':1}
				size_hint_y:None
				width:self.minimum_height
				padding:15
				spacing:20
				cols:3

				Botao:
					text:'4'
					size_hint:0.2,0.2
					on_release:
						root.ids.box.remove_widget(root.ids.tbox)
						root.ids.box.remove_widget(root.ids.tbox2P)	
						root.ids.box.remove_widget(root.ids.label)   
						root.addImagem(int(self.text))
				Botao:
					size_hint:0.2,0.2
					text:'6'
					on_release:
						root.ids.box.remove_widget(root.ids.tbox)
						root.ids.box.remove_widget(root.ids.tbox2P)
						root.ids.box.remove_widget(root.ids.label)
						root.addImagem(int(self.text))
				Botao:
					size_hint:0.2,0.2
					text:'10'
					on_release:
						root.ids.box.remove_widget(root.ids.tbox)
						root.ids.box.remove_widget(root.ids.tbox2P)
						root.ids.box.remove_widget(root.ids.label)
						root.addImagem(int(self.text))
		BoxLayout:
			id:label
			orientation:'vertical'
			size_hint_y:None
			height:self.minimum_height
			# padding:root.width*0.07,root.height*0.01 #preencher
			# spacing:'10dp' #espacamento
			canvas.before:
				Color:
					rgba:0.10,0.05,0,0
				RoundedRectangle:
					size:self.size
					pos:self.pos
					radius:[25,25]
					

		BoxLayout:
			id:tbox2P
			orientation:'vertical'
			size_hint_y:None
			height:5*dp(50)
			padding:root.width*0.07,root.height*0.02 #preencher
			#spacing:'0dp' #espacamento
			BoxLayout:
				id:tbox2
				orientation:'vertical'
				#padding:root.width*0.10,root.height*0.10 #preencher
				#spacing:'10dp' #espacamento
				canvas.before:
					Color:
						rgba:0.10,0.05,0,1
					RoundedRectangle:
						size:self.size
						pos:self.pos
						radius:[25,25]
		GridLayout:
			id:gridlayout
			size_hint_y:None 
			height:0  
			spacing:10
			cols:4
			canvas.before:
				Color:
					rgba:0.37,0.17,0.01,0
				Rectangle:
					pos:self.pos
					size:self.size
